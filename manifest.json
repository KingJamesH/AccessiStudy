{
    "manifest_version": 3,
    "name": "AccessiStudy",
    "version": "1.0",
    "description": "Extension for students to improve the accessibility of websites.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://api.openai.com/*"
    ],
    "web_accessible_resources": [{
      "resources": [
        "contentScript.js", 
        "styles.css",
        "fonts/OpenDyslexic-Regular.otf",
        "fonts/OpenDyslexic-Bold.otf",
        "fonts/OpenDyslexic-Italic.otf",
        "fonts/OpenDyslexic-BoldItalic.otf"
      ],
      "matches": ["<all_urls>"]
    }],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "css": ["styles.css"],
        "run_at": "document_end"
      }
    ]
  }
  